<% layout('layouts/boilerplate')%>


<% layout('layouts/boilerplate')%>

<div class="container" d-flex justify-content-center align-items-center mt-5>

    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-3">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1562206513-6a81cfc73936?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1050&q=80" 
                alt="" class="card-img-top">
                <div class="card-body">
                    <div class="card-title">Register</div>

                    <form action="/register" method="POST" class="validated-form" novalidate>

                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" autofocus required>
                            <div class="valid-feedback">Looks Good</div>
                        </div>
                    
                        <div class="mb-3">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" type="email" id="email" name="email" required>
                            <div class="valid-feedback">Looks Good</div>
                        </div>
                    
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">Looks Good</div>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-success btn-block">Register</button>
                        </div>
                    
                    </form>
                   
                </div>

             
            </div>
        </div>
    </div>

</div>

